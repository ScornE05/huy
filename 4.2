#include <stdio.h>
#include <math.h>
int main() {
    int soNguyento, dem = 0,i;
    do {
    printf("Nhap vao 1 so lon hon 0: ");
    scanf("%d", &soNguyento);
	} while (soNguyento <= 0);
    if (soNguyento == 1) printf("%d khong phai so nguyen to ",soNguyento);
    if (soNguyento == 2) printf("%d la so nguyen to ",soNguyento);
    if (soNguyento > 3) {
        for ( i = 2; i <= sqrt(soNguyento); i++) {
            if (soNguyento % i == 0) 
					dem += 1;
        }
        if (dem == 0) {
            printf("%d La so nguyen to ",soNguyento);
        } else {
            printf("%d khong phai so nguyen to ",soNguyento);
        }
    }
    return 0;
}
