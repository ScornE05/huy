#include <stdio.h>

int timMax(int a, int b, int c){
    int max = a;
    if (b > max) {
        max = b;
    }
    if (c > max) {
        max = c;
    }
    return max;
}
int namNhuan(int a){
    int kiemTra = 0;
    if (a % 4 == 0) {
        kiemTra += 1;
        if (a % 100 == 0) {
            kiemTra -= 1;
            if (a % 400 == 0) {
                kiemTra += 1;
            }
        }
    }
    if (kiemTra > 0) {
        printf("Nam %d la nam nhuan.\n", a);
    } else {
        printf("Nam %d khong phai nam nhuan.\n", a);
    }
    return kiemTra;
}
int hoanvi(int *a, int *b){
    int c;
    c = *a;
    *a = *b;
    *b = c;
    return c;
}
