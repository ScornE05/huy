#include <stdio.h>
#include <stdlib.h>
struct sv{
	char maSo[50];
	char tenSv[50];
	char nganhHoc[50];
	float diemTb;
} mangSv[50];

int main(){
    int i, n;
    printf("Nhap vao so sinh vien: ");
    scanf("%d", &n);
    getchar(); 
    
    for (i = 0; i < n; i++) {
        printf("Nhap vao thong tin cua sinh vien thu %d \n", i + 1);
        printf("Nhap vao ma so sinh vien: ");
        scanf("%s", mangSv[i].maSo);
        
        printf("Nhap vao ten sinh vien: ");
        getchar(); 
        gets(mangSv[i].tenSv);
        
        printf("Nhap vao nganh hoc cua sinh vien: ");
        gets(mangSv[i].nganhHoc);
        
        printf("Nhap vao diem trung binh cua sinh vien: ");
        scanf("%f", &mangSv[i].diemTb);
        printf("\n");
    }
	system("cls");

	int j;

   for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {
            if (mangSv[i].diemTb > mangSv[j].diemTb) {
                struct sv temp = mangSv[i];
                mangSv[i] = mangSv[j];
                mangSv[j] = temp;
            }
        }
    }
    printf("Sap xep sinh vien theo chieu tang dan cua diem trung binh.\n");
    printf("\n");
	for (i = 0; i < n ; i++){
		printf("Thong tin cua sinh vien thu %d \n",i+1);
		printf("Ma so sinh vien la: %s\n", mangSv[i].maSo);
		printf("Ten sinh vien  la: %s\n", mangSv[i].tenSv);
		printf("Nganh hoc cua sinh vien la: %s\n", mangSv[i].nganhHoc);
		printf("Diem trung binh cua sinh vien la: %.2f\n", mangSv[i].diemTb);
		printf("\n");
	}
	
	return 0;
}
