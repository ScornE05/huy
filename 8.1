        printf("Nhap vao thong tin cua sinh vien thu %d \n", i + 1);
        printf("Nhap vao ma so sinh vien: ");
        scanf("%s", mangSv[i].maSo);
        
        printf("Nhap vao ten sinh vien: ");
        getchar(); // Ð?c ký t? xu?ng dòng sau khi nh?p maSo
        gets(mangSv[i].tenSv);
        
