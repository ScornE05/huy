#include<stdio.h>
int main(){
	printf("Nhap vao lan luot 2 gia tri a va b: ");
	float a,b;
	scanf("%f %f", &a, &b);
	if( a == 0 ){
		if( b == 0 ){
			printf("Phuong trinh co vo so nghiem.");
		} else{
			printf("Phuong trinh vo nghiem.");
		}
	} else{
		printf("Phuong trinh co nghiem x = %.2f", -b/a);
	}
	return 0;                       
}                                                         
